{
    "name": "friendsofhyperf/websocket-cluster-addon",
    "description": "Websocket cluster addon base redis subscribe.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": ">=7.4",
        "hyperf/websocket-server": "~2.2.0",
        "hyperf/utils": "~2.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/command": "~2.2.0",
        "hyperf/di": "~2.2.0",
        "hyperf/event": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/process": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/server": "~2.2.0",
        "hyperf/signal": "~2.2.0",
        "hyperf/testing": "~2.2.0",
        "mix/redis-subscriber": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^7.0|^8.0|^9.0|^10.0",
        "swoole/ide-helper": "^4.5"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\WebsocketClusterAddon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfHyperf\\WebsocketClusterAddon\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\WebsocketClusterAddon\\ConfigProvider"
        }
    }
}